<h2>List of my tasks</h2>
<ul>
  <% @tasks.each do |task| %>
    <% x = task.completed ? 'Yes' : 'No' %>
    <li> <%= link_to task.name, task_path(task), class: 'link' %>
    - Completed : <%= x %>
    - <%= link_to 'Delete',
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }, class: 'link' %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new task', new_task_path, class: 'link' %>
